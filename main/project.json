{
    "name": "OrangeHRMDemo",
    "targets": {
        "pre:kiwi-run": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "main/tests/e2e",
                "command": "pnpm ts-node -P tsconfig.json scripts/pre-tcms-run/pre-tcms-run.ts"
            }
        },
        "test:e2e": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "main/tests",
                "command": "playwright test"
            }
        },
        "post:kiwi-run": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "main/tests/e2e",
                "command": "pnpm ts-node -P tsconfig.json scripts/post-tcms-run/post-tcms-run.ts"
            }
        },
        "test:kiwi": {
            "inputs": [
                "default",
                "e2e"
            ],
            "executor": "nx:run-commands",
            "options": {
                "cwd": "main",
                "command": "pnpm nx test:e2e OrangeHRMDemo",
                "env": {
                    "KIWI_MODE": "tcms"
                }
            }
        }
    }
}